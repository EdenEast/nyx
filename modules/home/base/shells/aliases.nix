  v = "nvim";

  # Directory navigation
  ".." = "cd ..";
  "..." = "cd ../..";
  "...." = "cd ../../..";

  # File operations
  ll = "eza --group-directories-first --color=auto -la";
  la = "eza --group-directories-first --color=auto -la";
  ls = "eza --group-directories-first --color=auto -l";
  lt = "eza --group-directories-first --color=auto --tree";
  tree = "eza -T";
}
